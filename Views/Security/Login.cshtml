@model PersonelMVCUI.Models.EntityFramework.Kullanici
@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=devicde-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Giriş yapmak için formu doldurunuz</h2><br /><br />
        @ViewBag.Mesaj
        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Ad)
                @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sifre)
                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Parola" })
            </div>

            <button type="submit" class="btn btn-block btn-primary">Giriş Yap</button>
        }
    </div>

</body>

</html>
